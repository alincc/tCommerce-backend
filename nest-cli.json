{
  "language": "ts",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "**/*.html", "outDir": "dist/src" },
      { "include": "**/*.css", "outDir": "dist/src" },
      { "include": "**/*.woff2", "outDir": "dist/src" }
    ]
  }
}
