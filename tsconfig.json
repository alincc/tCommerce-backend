{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "allowJs": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
